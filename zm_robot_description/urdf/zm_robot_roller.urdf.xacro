<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find zm_robot_description)/urdf/zm_robot_roller.transmission.xacro"/>
  <xacro:include filename="$(find zm_robot_description)/urdf/zm_robot_roller.gazebo"/>
  
  <xacro:macro name="zm_roller_v0" params="prefix parent origin_x origin_y rotation_x rotation_z">
	<joint name="${prefix}_joint" type="continuous">
	  <parent link="${parent}"/>
	  <child link="${prefix}"/>
	  <origin xyz="${origin_x} ${origin_y} 0" rpy="${rotation_x} 0 ${rotation_z}"/>
      <axis xyz="0 0 1"/>
	  <dynamics damping="0.0" friction="0.0"/>
	</joint>

	<link name="${prefix}">
	  <visual>
		<geometry>
		  <mesh filename="file://$(find zm_robot_description)/meshes/mecanum_roller.stl" scale="0.01 0.01 0.01"/>
		</geometry>
		<material name="black"/>
	  </visual>
	  <collision>
		<geometry>
		  <mesh filename="file://$(find zm_robot_description)/meshes/mecanum_roller.stl" scale="0.01 0.01 0.01"/>
		</geometry>
	  </collision>
	  <inertial>
		<origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.124"/>
        <inertia ixx="0.0051893" ixy="0.0" ixz="0.0" iyy="0.0051893" iyz="0.0" izz="0.0013891"/>
	  </inertial>
	</link>
  </xacro:macro>
  
</robot>